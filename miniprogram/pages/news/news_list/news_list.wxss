/* miniprogram/pages/news/news_list/news_list.wxss */

.item {
    display: flex;
    flex-flow: column nowrap;
    width: 700rpx;
    height: 200rpx;
    margin: 0 25rpx;
}

.content {
    display: flex;
    flex-flow: row nowrap;
    margin: 5rpx 0;
}

.content_img {
    width: 220rpx;
    height: 165rpx;
}

.content_view {
    display: flex;
    flex-flow: column nowrap;
    justify-content: space-between;
    width: 455rpx;
    height: 165rpx;
    margin-left: 25rpx;
}

.title {
    width: 455rpx;
    font-size: 24rpx;
    font-weight: 400;
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.content_bottom {
    width: 100%;
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-between;
    bottom: 0;
}

.content_bottom text {
    font-size: 24rpx;
    font-weight: 400;
}

.line {
    width: 700rpx;
    height: 1rpx;
    margin: 10rpx 0rpx;
    background-color: #88888888;
}